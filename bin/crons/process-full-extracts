#!/bin/bash

source "$(realpath "$(dirname ${0})"/../env)"

trap cleanup EXIT

################################################################################

NEXT=0
while (( ${NEXT} < ${#DATASETS[@]} ));
do
  sleep 0.25

  for i in ${!PIDLIST[@]};
  do
    if (( ${NEXT} >= ${#DATASETS[@]} ))
    then
      break
    fi

    PID=${PIDLIST[$i]}
    DATASET=${DATASETS[$NEXT]}

    kill -0 "${PID}" >/dev/null 2>&1
    RETVAL=$?

    if (( ${RETVAL} != 0 ))
    then
      EXTRACT=$(${CMD} extracts:list:downloaded --skip-fulldiff --skip-diff "${DATASET}" | head -1)

      if [ -n "${EXTRACT}" ]
      then
        SKIP=$(${CMD} extracts:list:downloaded --skip-full "${DATASET}")

        for PREV in $SKIP
        do
          if [[ "${PREV}" < "${EXTRACT}" ]]
          then
            touch "${EXTRACT_PROCESS_DIR}/${PREV}.json"
          fi
        done

        ${CMD} extracts:process "${EXTRACT}" &

        PIDLIST[$i]=$!
      fi

      NEXT=$((NEXT + 1))
    fi
  done
done

wait

################################################################################

trap - EXIT

exit 0
